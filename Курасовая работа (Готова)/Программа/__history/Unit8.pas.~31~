unit Unit8;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Vcl.Menus, Vcl.Grids, Vcl.StdCtrls;

type
  TForm8 = class(TForm)
    StringGrid1: TStringGrid;
    MainMenu1: TMainMenu;
    N1: TMenuItem;
    N2: TMenuItem;
    N3: TMenuItem;
    N4: TMenuItem;
    N5: TMenuItem;
    procedure N4Click(Sender: TObject);
    procedure N2Click(Sender: TObject);
    procedure StringGrid1SetEditText(Sender: TObject; ACol, ARow: Integer;
      const Value: string);
    procedure N3Click(Sender: TObject);
    procedure FormCreate(Sender: TObject);
    procedure N5Click(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  Form8: TForm8;
  map,map2:array[0..11,0..11] of integer;
  i,j,n,m,k:integer;
  sov,game:boolean;

implementation

{$R *.dfm}

uses Unit2, Unit9;


procedure TForm8.FormCreate(Sender: TObject);
begin
game:=false;
end;

procedure TForm8.N2Click(Sender: TObject);
var z:integer;
begin
  game:=true;
  Randomize;

  for i := 0 to 11 do
  for j := 0 to 11 do
  begin
    map[i,j]:=0;
    map2[i,j]:=0;
    StringGrid1.Cells[i,j]:='';
  end;

  i:=0;
  while i<=11 do
  begin
    i:=Random(12);
    if map2[0,j]=0 then
    begin
    inc(i);

    n:=1;
     for m := 0 to 11 do
     begin
     map2[m,j]:=n;
     inc(n);

     if n>12 then n:=1;
     end;
    end;
  end;



  for n := 1 to 12 do
    begin
    i:=random(12);
    j:=random(12);
    for m := 0 to 11 do
      begin
        k:=map2[i,m];
        map2[i,m]:=map2[j,m];
        map2[j,m]:=k;
      end;
    end;



    for n := 1 to 24 do
      begin
        i:=Random(12);
        j:=Random(12);
        map[i,j]:=map2[i,j];
      end;

    for i := 0 to 11 do
    for j := 0 to 11 do
    if map[i,j]>0 then
    StringGrid1.Cells[i,j]:=IntToStr(map[i,j]);

end;

procedure TForm8.N3Click(Sender: TObject);
begin

 for i := 0 to 11 do
 for j := 0 to 11 do
   begin
     map[i,j]:=map2[i,j];
     StringGrid1.Cells[i,j]:=IntToStr(map2[i,j]);
   end;
   game:=false;
   ShowMessage('Ты победил');
end;

procedure TForm8.N4Click(Sender: TObject);
begin
close;
end;

procedure TForm8.N5Click(Sender: TObject);
begin
Form8.Close;
Form2.Show;
end;

procedure TForm8.StringGrid1SetEditText(Sender: TObject; ACol, ARow: Integer;
  const Value: string);
begin
  if (Value='1') or (Value='2') or (Value='3') or (Value='4') or (Value='5') or (Value='6') or (Value='7') or (Value='8') or (Value='9') or (Value='10') or (Value='11') or (Value='12')
  then map[Acol,Arow]:=0
  else
  begin
    map[Acol,Arow]:=0;
    StringGrid1.Cells[Acol,Arow]:='';
  end;



map[Acol,Arow]:=StrToInt(Value);
sov:=true;
for i := 0 to 11 do
for j := 0 to 11 do
if map[i,j]<>map2[i,j] then Sov:=False;

if (Sov=True) and (game=true) then
  begin
  ShowMessage('Ты победил!!!');
  Sov:=False;
  game:=false;
  end;

end;

end.
